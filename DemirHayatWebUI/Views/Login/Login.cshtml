@model DemirHayatWebUI.Models.Login.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Giriş Yap</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid center-block">
            <div class="row">
                <div class="col-md-6 col-lg-offset-3 ">
                   
                    <div class="col-md-6 col-md-offset-3">
                        <div class="center-block">
                            <h4 style="padding-top:20px; padding-bottom:20px">Giriş Yap</h4>
                        </div>
                    </div>



                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            <div class="col-md-6 col-md-offset-3">
                                <div class="center-block">
                                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-6 col-md-offset-3">
                                <div class="center-block">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        @if (ViewBag.message != null)
                        {
                            <div class="col-md-6 col-md-offset-3">
                                <div class="center-block">
                                    <label style="color:red; padding-top:10px; padding-bottom:10px;">@ViewBag.message</label>
                                </div>
                            </div>

                        }

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <div>
                                    <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>



    }

</body>
</html>
